apiVersion: v1
kind: Service
metadata:
  name: go-echo-svc
spec:
  selector:
    app: go-echo-app
    type: server
  type: ClusterIP
  ports:
  - name: go-app-port
    port: 80
    targetPort: go-echo-port
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: go-echo-deployment
  labels:
    deploy_type: rollout
spec:
  replicas: 1
  selector:
    matchLabels:
      app: go-echo-app
      type: server
  strategy:
    type: RollingUpdate
  template:
    metadata:
      labels:
        app: go-echo-app
        type: server
    spec:
      containers:
      - name: my-go-echo-app
        image: somnathbm/go-echo:v1
        ports:
        - name: go-echo-port
          containerPort: 1323
